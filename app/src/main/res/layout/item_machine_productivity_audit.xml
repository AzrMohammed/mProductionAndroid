<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <RelativeLayout
                        android:id="@+id/update_ly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <leora.com.baseapp.customviews.F1TextViewBold
                            android:id="@+id/machine_name_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/edit_iv"
                            android:text="Machine Name"
                            android:textColor="@color/text_kind_grey"
                            android:textSize="@dimen/text_medium" />


                        <leora.com.baseapp.customviews.F1TextViewBold
                            android:id="@+id/product_name_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="0dp"
                            android:text="Product Name"
                            android:textColor="@color/text_kind_grey"
                            android:textSize="@dimen/text_medium" />


                    </RelativeLayout>


                    <leora.com.baseapp.customviews.F1TextViewRegular
                        android:id="@+id/job_order_id_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/update_ly"
                        android:text="Job Order Id"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_small" />


                    <leora.com.baseapp.customviews.F1TextViewRegular
                        android:id="@+id/process_description_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/job_order_id_et"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_smallx" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/process_description_et"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/audit_from_ly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <leora.com.baseapp.customviews.F1TextViewBold
                                android:id="@+id/from_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Audit Start Time"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/audit_date_from_et"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_title"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/audit_to_ly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <leora.com.baseapp.customviews.F1TextViewBold
                                android:id="@+id/to_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Audit End Time"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/audit_date_to_et"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_to_et"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/totaltime_ly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <leora.com.baseapp.customviews.F1TextViewBold
                                android:id="@+id/total_time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Total time"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/total_time_et"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_to_et"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"

                            >

                            <leora.com.baseapp.customviews.F1TextViewBold

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="Approved"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/approved_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_title"
                                android:gravity="center"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <leora.com.baseapp.customviews.F1TextViewBold
                                android:id="@+id/reject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="Rejected"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/rejected_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_to_et"
                                android:gravity="center"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <leora.com.baseapp.customviews.F1TextViewBold

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="Rework"
                                android:textAllCaps="true"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallxx" />

                            <leora.com.baseapp.customviews.F1TextViewRegular
                                android:id="@+id/rework_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/audit_date_to_et"
                                android:gravity="center"
                                android:textColor="@color/text_kind_grey"
                                android:textSize="@dimen/text_smallx" />


                        </LinearLayout>

                    </LinearLayout>

                    <leora.com.baseapp.customviews.F1TextViewRegular
                        android:id="@+id/comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/job_order_id_et"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_kind_grey"
                        android:textSize="@dimen/text_smallx" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>