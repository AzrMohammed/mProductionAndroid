<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/update_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <leora.com.baseapp.customviews.F1TextViewBold
                    android:id="@+id/material_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_toLeftOf="@+id/upadte_tv"
                    android:text="Name"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_medium"

                    />

                <leora.com.baseapp.customviews.F1TextViewLight
                    android:layout_below="@+id/material_name_tv"
                    android:id="@+id/material_ref_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:paddingBottom="5dp"
                    android:layout_toLeftOf="@+id/upadte_tv"
                    android:text="Ref id"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallxx"

                    />
                <leora.com.baseapp.customviews.F1TextViewLight
                    android:layout_below="@+id/audit_type_tv"
                    android:id="@+id/metric_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:text="Count"
                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallxx"

                    />

                <leora.com.baseapp.customviews.F1TextViewBold
                    android:id="@+id/audit_type_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upadte_tv"
                    android:paddingTop="0dp"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="5dp"
                    android:text="Audit Type"
                    android:textColor="@color/black_solid"
                    android:textSize="@dimen/text_smallxx"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <leora.com.baseapp.customviews.F1TextViewRegular
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_ly"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/text_kind_grey"
                android:textSize="@dimen/text_small" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_tv"
                >

                <leora.com.baseapp.customviews.F1TextViewBold
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/audit_date_title"

                    android:text="Audit Date"
                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallxx" />
                <leora.com.baseapp.customviews.F1TextViewRegular
                    android:id="@+id/audit_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audit_date_title"

                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallx" />
                <leora.com.baseapp.customviews.F1TextViewBold
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/updated_date_title"

                    android:text="Updated Date"
                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallxx" />
                <leora.com.baseapp.customviews.F1TextViewRegular
                    android:id="@+id/updated_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audit_date_title"

                    android:textColor="@color/text_kind_grey"
                    android:textSize="@dimen/text_smallx" />


            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>