<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <leora.com.baseapp.customviews.F1TextViewLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Machine Audit"
                android:textSize="@dimen/text_largex"
                android:textColor="@color/black_solid"

                />


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/machine_name_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:lines="1"
                android:editable="false" android:inputType="none"
                android:layout_height="wrap_content"
                android:hint="Machine Name"
                android:maxLength="30"
                android:textSize="@dimen/text_smallx"
                />


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/product_name_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:lines="1"
                android:editable="false" android:inputType="none"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:maxLength="30"
                android:textSize="@dimen/text_smallx"
                />


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/job_order_id_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:lines="1"
                android:inputType="textEmailAddress|textCapCharacters"
                android:layout_height="wrap_content"
                android:hint="Job Order Id"
                android:maxLength="30"
                android:textSize="@dimen/text_smallx"
                />


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/process_description_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_mind_grey_rectangle_radius"
                android:inputType="textCapSentences"
                android:gravity="top"
                android:textSize="@dimen/text_smallx"
                android:hint="Process description if any"
                android:padding="5dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                >


                <leora.com.baseapp.customviews.F1EditTextLight
                    android:editable="false" android:inputType="none"
                    android:id="@+id/audit_date_from_et"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="Audit from date"
                    android:textSize="@dimen/text_smallx"
                    />

                <leora.com.baseapp.customviews.F1EditTextLight
                    android:editable="false" android:inputType="none"
                    android:id="@+id/audit_time_from_et"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Audit from time"
                    android:textSize="@dimen/text_smallx"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                >


                <leora.com.baseapp.customviews.F1EditTextLight

                    android:editable="false" android:inputType="none"
                    android:id="@+id/audit_date_to_et"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="Audit to date"
                    android:textSize="@dimen/text_smallx"
                    />

                <leora.com.baseapp.customviews.F1EditTextLight

                    android:editable="false" android:inputType="none"
                    android:id="@+id/audit_time_to_et"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Audit to time"
                    android:textSize="@dimen/text_smallx"
                    />


            </LinearLayout>


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/quantity_approved_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:inputType="number|numberSigned"
                android:hint="Total approved quantitiy"
                android:textSize="@dimen/text_smallx"
                />

            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/quantity_rework_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:inputType="number|numberSigned"
                android:hint="Total rework quantitiy"
                android:textSize="@dimen/text_smallx"
                />

            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/quantity_rejected_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:inputType="number|numberSigned"
                android:hint="Total rejected quantitiy"
                android:textSize="@dimen/text_smallx"
                />

            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/operator_name_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:inputType="textCapWords"
                android:hint="Operator name"
                android:textSize="@dimen/text_smallx"
                />


            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/supervisor_name_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:inputType="textCapWords"
                android:hint="Supervisor name"
                android:textSize="@dimen/text_smallx"
                />



            <leora.com.baseapp.customviews.F1EditTextLight
                android:id="@+id/comment_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_mind_grey_rectangle_radius"
                android:inputType="textCapSentences"
                android:gravity="top"
                android:textSize="@dimen/text_smallx"
                android:hint="Comment if any"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/submit_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_button_primary"
                android:orientation="vertical">


                <leora.com.baseapp.customviews.F1TextViewRegular
                    android:id="@+id/submit_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="true"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_smallx" />

            </LinearLayout>



        </LinearLayout>


    </ScrollView>


</LinearLayout>